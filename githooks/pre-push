#!/bin/sh
set -eu

REPO_ROOT="$(git rev-parse --show-toplevel)"
cd "$REPO_ROOT"

run() {
    local task="$1"
    echo "==> Running ./gradlew $task"
    ./gradlew "$task"
}

run ktlintCheck
run check
run :composeApp:jvmTest
run :composeApp:assembleRelease
run :composeApp:linkDebugFrameworkIosArm64
run :composeApp:jvmJar
